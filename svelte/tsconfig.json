{
  "compilerOptions": {
    "strict": true,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "es2017", "dom"],
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/*"]
    },
    "typeRoots": ["types"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["app", "types"],
  "exclude": ["node_modules", "platforms"]
}
